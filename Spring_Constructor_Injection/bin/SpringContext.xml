<?xml version="1.0" encoding="UTF-8"?>

<!-- //Constructor based Injection Demo -->

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


   <bean id="obj" class="com.Spring.Student">
   
   <!-- <constructor-arg></constructor-arg> use this in constructor injection -->
       <constructor-arg name="id" value="74"></constructor-arg>
       <constructor-arg name="name" value="Nandini"></constructor-arg>
       
 
   </bean>


</beans>